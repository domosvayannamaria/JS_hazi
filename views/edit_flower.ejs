<%- include('header') -%>

<h1>Edit flower</h1>
<div class="container">
    <form method="post">
        <label for="flower_name"> Flower Name: </label><br>
        <input type="text" id="flower_name" name="flower_name" class="form-input" value="Peony" required>

        <label for="amount">Amount:</label><br>
        <input type="number" id="amount" name="amount" class="form-input" value="20" required>

        <label for="price">Price:</label><br>
        <input type="number" id="price" name="price" value="1.20" step="0.01" required><br>

        <input type="submit" value="Edit flower">
    </form>
</div>

